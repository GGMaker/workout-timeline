<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/dialog_muscle_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Muscle Group" />

        <Spinner
            android:id="@+id/muscle_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/nine"
            android:layout_weight="2"
           />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_exercise"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_muscle_group"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Execsercise" />

        <Spinner
            android:id="@+id/execercise_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_weight"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_exercise"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Weight" />

        <Spinner
            android:id="@+id/weight_100_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
           />

        <Spinner
            android:id="@+id/weight_10_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
           />

        <Spinner
            android:id="@+id/weight_1_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
             />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_reps"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_weight"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Reps" />

        <Spinner
            android:id="@+id/reps_10_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
             />

        <Spinner
            android:id="@+id/reps_1_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_reps"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_forgetit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Forget it" />

        <Button
            android:id="@+id/dialog_done_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Done" />
    </LinearLayout>

</RelativeLayout>